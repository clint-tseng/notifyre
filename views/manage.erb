<form action="/signup" method="POST">
  <% if flash[:notice] %>
    <div class="flash"><%= flash[:notice] %></div>
  <% end %>

  <label for="email">Your Email</label>
  <input type="text" id="email" name="user[email]"/>
  <label for="password">Old Password</label>
  <input type="text" id="password_old" name="user[password_old]"/>
  <label for="password">New Password</label>
  <input type="text" id="password" name="user[password]"/>
  <label for="password">Again</label>
  <input type="text" id="password_verify" name="password_verify"/>

  <label for="phone">Your Cell#</label>
  <input type="text" id="phone" name="user[phone_number]"/>

  <h3>Addresses</h3>
  <ul class="addresses">
    <% @user.alerts.each do |alert| %>
      <li>
        <label for="address">Name</label>
        <input type="text" id="name_0" name="name[0][name]"/>
        <label for="address">Address</label>
        <input type="text" id="address_0" name="alert[0][human_address]"/>
      </li>
    <% end %>
  </ul>

  <div class="submitLine">
    <input type="submit" value="update"/>
  </div>
</form>

